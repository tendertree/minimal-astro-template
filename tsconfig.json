{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@": [
				"/"
			],
			"@ui/*": [
				"./src/components/ui/*"
			],
			"@components/*": [
				"./src/components/*"
			]
		},
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"plugins": [
			{
				"name": "@astrojs/ts-plugin"
			}
		]
	},
	"include": [
		"src",
		"./src/**/*.d.ts",
		"./src/**/*.ts",
		"./src/**/*.astro"
	]
}
